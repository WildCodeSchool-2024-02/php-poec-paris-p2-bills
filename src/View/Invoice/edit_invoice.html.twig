{% extends 'layout.html.twig' %}

{% block links %}
    <link href="/assets/css/create-invoice.css" rel="stylesheet" />
{% endblock %}

{% block scripts %}
    <script rel="script" src="/assets/script/script.js" defer></script>
{% endblock %}

{% block subtitle %}
    Modification Facture
{% endblock %}

{% block content %}

    {% if errors is not empty %}
        {% for error in errors %}
            {{ error }}
        {% endfor %}
    {% endif %}

    <form action="" method="post">
        <div class="dates-field">
            <div>
                <label for="created_at">Date de facturation</label>
                <input type="date" name="created_at" id="created_at" value="{{invoice.infos.0.created_at}}" required>
            </div>

            <div>
                <label for="due_at">Date d'échéance</label>
                <input type="date" name="due_at" id="due_at" value="{{invoice.infos.0.due_at}}" required>
            </div>
        </div>

        <fieldset class="infos-field">
            <legend>Vos informations</legend>
            <input type="text" name="user_siret" id="user_siret" placeholder="Numéro de Siret" value="{{invoice.infos.0.user_siret}}" maxlength="14" pattern="[0-9]{14}" title="Le numéro de Siret doit comporter 14 chiffres" required>
            <input type="text" name="user_name" id="user_name" placeholder="Nom complet" value="{{invoice.infos.0.user_name | raw}}" maxlength="255" pattern="[A-Za-zÀ-ÿ '-]+" title="Le nom complet ne doit contenir que des lettres, des espaces et des tirets" required>
            <input type="text" name="user_address" id="user_address" placeholder="Addresse postale" value="{{invoice.infos.0.user_address | raw}}" maxlength="255" pattern="[A-Za-zÀ-ÿ0-9 ',-]+" required>
        </fieldset>

        <fieldset class="infos-field">
            <legend>Informations client</legend>
            <input type="text" name="client_siret" id="client_siret" placeholder="Numéro de Siret" value="{{invoice.infos.0.client_siret}}" maxlength="14" pattern="[0-9]{14}" title="Le numéro de Siret doit contenir 14 chiffres">
            <input type="text" name="client_name" id="client_name" placeholder="Nom complet" value="{{invoice.infos.0.client_name | raw}}" maxlength="255" pattern="[A-Za-zÀ-ÿ '-]+" title="Le nom complet ne doit contenir que des lettres, des espaces et des tirets">
            <input type="text" name="client_address" id="client_address" placeholder="Addresse postale" value="{{invoice.infos.0.client_address | raw}}" maxlength="255" pattern="[A-Za-zÀ-ÿ0-9 ',-]+">
        </fieldset>

        <fieldset class="products-field">
            <legend>Produit ou Service</legend>
            <div id="product-container">
                {% for product in invoice.products %}
                    <div class="product-line">
                        <input type="text" name="product_name_{{product.id}}" placeholder="Désignation du produit ou service" value="{{product.name | raw}}" maxlength="100" required>
                        <input type="text" name="product_price_{{product.id}}" placeholder="Prix unitaire" value="{{product.price}}" maxlength="10" pattern="[0-9]+([,\\.][0-9]{1,2})?" required>
                        <input type="text" name="product_quantity_{{product.id}}" placeholder="Quantité" value="{{product.quantity}}" maxlength="5" pattern="[0-9]+([,\\.][0-9]{1,2})?" required>
                        <input type="text" name="product_total_{{product.id}}" placeholder="Total" value="{{product.total}}" maxlength="10" pattern="[0-9]+([,\\.][0-9]{1,2})?" required readonly>
                        <button type="button" class="remove-item">-</button>
                    </div>
                {% endfor %}
            </div>

            <div>
                <button type="button" id="add-item">+ Ajouter un article</button>
            </div>

            <input type="text" name="total_amount" id="total_amount" placeholder="Montant total" value="{{invoice.infos.0.total_amount}}" required readonly>
        </fieldset>

        <fieldset class="bank-details-field">
            <legend>Informations Bancaires</legend>
            <input type="text" name="user_bank_details" id="user_bank_details" placeholder="Saisissez votre IBAN" maxlength="34" pattern="[A-Z]{2}[0-9]{2}[A-Z0-9]{11,30}" title="Veuillez entrer un IBAN valide">
        </fieldset>

        <div class="form-cta">
            <button type="submit">Valider</button>
            <button">Annuler</button>
        </div>
    </form>

{% endblock %}
